<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tikeyc.messageandthreadstudy.MainActivity"
    android:orientation="vertical">


    <Button
        android:text="Test Hander"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/message_main_button1"
        android:textAllCaps="false"
        android:onClick="onClickButtonAction" />

    <Button
        android:text="Hander Demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/message_main_button2"
        android:textAllCaps="false"
        android:onClick="onClickButtonAction" />

    <Button
        android:text="Test AsyncTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/message_main_button3"
        android:textAllCaps="false"
        android:onClick="onClickButtonAction" />

    <Button
        android:text="Test Json"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/message_main_button4"
        android:textAllCaps="false"
        android:onClick="onClickButtonAction"
        android:layout_marginTop="30dp" />

    <Button
        android:text="ListView Demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/message_main_button5"
        android:onClick="onClickButtonAction"
        android:textAllCaps="false"
        android:layout_marginTop="40dp"/>
</LinearLayout>
