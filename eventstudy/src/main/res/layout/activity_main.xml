<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tikeyc.eventstudy.MainActivity"
    android:orientation="vertical">


    <Button
        android:text="MotionEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_button1"
        android:textAllCaps="false"
        android:onClick="onClickButtonAction" />

    <Button
        android:text="KeyEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_button2"
        android:textAllCaps="false"
        android:onClick="onClickButtonAction" />

    <Button
        android:layout_marginTop="30dp"
        android:text="Custome View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_button3"
        android:textAllCaps="false"
        android:onClick="onClickButtonAction" />
</LinearLayout>
