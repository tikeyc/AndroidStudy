<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <circleImageView.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@android:color/holo_green_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:id="@+id/icon_imageView"
        android:src="@mipmap/ic_launcher"
        app:civ_border_width="2dp"
        app:civ_border_color="#ccc"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nick_textView"
        android:layout_alignTop="@+id/icon_imageView"
        android:layout_toRightOf="@+id/icon_imageView"
        android:layout_toEndOf="@+id/icon_imageView"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/icon_imageView"
        android:layout_toRightOf="@+id/icon_imageView"
        android:layout_toEndOf="@+id/icon_imageView"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/city_textView" />

    <TextView
        android:text="在看"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/online_users_textView"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView2"
        android:textSize="10sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/online_users_textView"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_above="@+id/portrait_imageView"
        android:layout_toLeftOf="@+id/textView2"
        android:layout_toStartOf="@+id/textView2"
        android:layout_marginRight="2dp" />



    <ImageView
        app:srcCompat="@android:color/holo_orange_light"
        android:layout_below="@+id/icon_imageView"
        android:layout_alignLeft="@+id/icon_imageView"
        android:layout_alignStart="@+id/icon_imageView"
        android:layout_marginTop="12dp"
        android:id="@+id/portrait_imageView"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

</RelativeLayout>
