<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_local_service"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tikeyc.servicestudy.LocalServiceActivity"
    android:orientation="vertical" >

    <TextView
        android:text="测试启动本地服务"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="启动服务"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/local_service_start_button"
            android:layout_weight="1"
            android:onClick="onClickButtonAction"/>

        <Button
            android:text="停止服务"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/local_service_stop_button"
            android:layout_weight="1"
            android:onClick="onClickButtonAction" />
    </LinearLayout>

    <TextView
        android:text="测试绑定本地服务"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <Button
            android:text="绑定服务"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/local_service_bind_button"
            android:layout_weight="1"
            android:onClick="onClickButtonAction" />

        <Button
            android:text="解绑服务"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/local_service_unbind_button"
            android:layout_weight="1"
            android:onClick="onClickButtonAction" />
    </LinearLayout>
</LinearLayout>
