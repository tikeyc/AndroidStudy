<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tikeyc.servicestudy.MainActivity"
    android:orientation="vertical"
    android:weightSum="1">


    <Button
        android:text="Local Service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_service_button1"
        android:textAllCaps="false"
        android:onClick="onClickButtonAction" />

    <Button
        android:text="Remote Service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_service_button2"
        android:textAllCaps="false"
        android:onClick="onClickButtonAction" />

    <Button
        android:layout_marginTop="40dp"
        android:text="开启来电监听"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_service_button3"
        android:onClick="onClickButtonAction" />

    <Button
        android:text="停止来电监听"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_service_button4"
        android:onClick="onClickButtonAction" />
</LinearLayout>
